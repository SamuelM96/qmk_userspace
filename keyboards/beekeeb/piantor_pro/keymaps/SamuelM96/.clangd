CompileFlags:
  Compiler: clang
  # The __CLANGD__ definition is there to deal with "inactive" code regions
  Add: [-x, c, -std=c99, -Wall, -Wextra, -Wpedantic, -Werror, -D__CLANGD__]

SemanticTokens:
  DisabledKinds: [InactiveCode]

Diagnostics:
  Suppress: [unused-parameter, unused-variable, unused-but-set-variable, empty-translation-unit, unused-includes]
